<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="5"
        android:entries="@array/calculation_method_titles"
        android:entryValues="@array/calculation_method_values"
        android:key="@string/key_calculation"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="@string/pref_description_social_recommendations"
        android:title="@string/pref_title_social_recommendations" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/key_athan"
        android:summary="Allow Athan to be played when prayer is due"
        android:title="Athan" />
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <Preference
        android:title="Sync"
        android:key="@string/key_sync"
        />
    <ListPreference
        android:defaultValue="5"
        android:entries="@array/calculation_method_titles"
        android:entryValues="@array/calculation_method_values"
        android:key="@string/key_colour_scheme"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="Select a desired colour"
        android:title="Colour Scheme" />
    <Preference
        android:title="About"
        android:key="sync_button"
        />
</PreferenceScreen>
